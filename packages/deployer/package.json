{
  "name": "@shepherdorg/deployer",
  "version": "4.3.2",
  "description": "Deployer application",
  "main": "dist/shepherd.js",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@shepherdorg/docker-image-metadata-loader": "^4.3.0",
    "@shepherdorg/exec": "^4.3.0",
    "@shepherdorg/filestore-backend": "^4.3.1",
    "@shepherdorg/metadata": "^4.3.0",
    "@shepherdorg/nano-inject": "^4.3.0",
    "@shepherdorg/postgres-backend": "^4.3.1",
    "@shepherdorg/state-store": "^4.3.0",
    "@shepherdorg/ui-push": "^4.3.0",
    "@types/diff": "^4.0.2",
    "@types/js-yaml": "^3.12.1",
    "array-flat-polyfill": "^1.0.1",
    "array.prototype.flatmap": "^1.2.3",
    "bluebird": "^3.7.1",
    "bunyan": "^1.8.12",
    "chalk": "^4.0.0",
    "db-migrate": "^0.11.6",
    "db-migrate-pg": "^1.0.0",
    "handlebars": "^4.1.2",
    "istanbul": "^0.4.5",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.15",
    "oops-error": "^2.4.0",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/chai": "4.2.11",
    "@types/mocha": "^5.2.7",
    "@types/node": "12.12.6",
    "chai": "^4.2.0",
    "expect.js": "0.3.1",
    "mocha": "^6.2.1",
    "nyc": "^15.0.0",
    "should": "^13.2.3",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "build-test-images": "cd src/integratedtest/testimages && ./build-test-images.sh",
    "start-postgres": "docker run --rm --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d -p 5432:5432 postgres",
    "kill-postgres": "docker stop postgres",
    "specs": "mocha --exit --require ts-node/register --recursive 'src/**/*.spec.ts'",
    "coverage": "TS_NODE_COMPILER_OPTIONS='{\"removeComments\":false}' nyc mocha --require ts-node/register --require source-map-support/register --recursive 'src/**/*.spec.ts'",
    "tdd": "mocha --exit -R dot --require ts-node/register --recursive --watch-extensions ts --watch 'src/**/*.spec.ts'",
    "integratedtest": "yarn build && yarn build-test-images && mocha --exit --recursive 'dist/integratedtest/**/*.integratedtest.js'",
    "compile-in-background": "tsc -w > /dev/null &",
    "itdd": "npm run compile-in-background && mocha --exit --require ts-node/register --recursive --watch-extensions ts,js,sh --watch 'src/integratedtest/**/*.integratedtest.ts'",
    "test": "yarn specs",
    "build": "tsc && chmod +x dist/shepherd.js",
    "prepublishOnly": "yarn build && yarn test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "testbin/**",
      "coverage/**",
      "dist/**",
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
